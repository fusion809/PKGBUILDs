            '31ee34a87ba2451f23641e2558d8c877a8274c2733fc3335d41305f41b6ecc57')

prepare() {
  cd "$srcdir/${_pkgname}-$pkgver"

  ## package.json edits
  sed -i -e "/exception-reporting/d" \
           -e "/metrics/d" package.json

  sed -i -e "s/\"about\": \".*\"/\"about-arch\": \"${_about_arch_ver}\"/g" package.json # switching about with about-arch

  sed -i -e "s/\"electronVersion\": \".*\"/\"electronVersion\": \"${_electron_ver}\"/g" package.json              # change electron ver

  sed -i -e "/\"atom-light-syntax\": \".*\"/a \
              \"dark-bint-syntax\": \"${_dark_bint_syntax_ver}\"," package.json # install dark-bint-syntax

  sed -i -e "/\"atom-light-ui\": \".*\",/a \
             \"fusion-ui\": \"${_fusion_ui_ver}\"," package.json # install fusion-ui theme

  sed -i -e "/\"archive-view\": \".*\",/a \
              \"atom-language-rust\": \"${_atom_language_rust_ver}\"," package.json

  sed -i -e "/\"find-and-replace\": \".*\",/i \
              \"file-icons\": \"${_file_icons_ver}\"," package.json # file-icons

  sed -i -e "/\"git-diff\": \".*\",/a \
              \"git-plus\": \"${_git_plus_ver}\",\n    \"git-time-machine\": \"${_git_time_machine_ver}\"," package.json # git packages

  sed -i -e "/\"language-css\": \".*\",/a \
              \"language-d\": \"${_language_d_ver}\",\n    \"language-docker\": \"${_language_docker_ver}\",\n    \"language-fortran\": \"${_language_fortran_ver}\"," package.json

  sed -i -e "s/\"language-gfm\": \".*\",/\"language-gfm2\": \"${_language_gfm2_ver}\",/g" package.json # GFM2

  sed -i -e "/\"language-gfm2\": \".*\",/i \
              \"language-gentoo\": \"${_language_gentoo_ver}\"," package.json # gentoo

  sed -i -e "/\"language-hyperlink\": \".*\",/a \
              \"language-ini2\": \"${_language_ini2_ver}\",\n    \"language-julia\": \"${_language_julia_ver}\"," package.json # Julia

  sed -i -e "/\"language-less\": \".*\",/a \
              \"language-liquid\": \"${_language_liquid_ver}\",\n    \"language-lisp\": \"${_language_lisp_ver}\",\n    \"language-lua\": \"${_language_lua_ver}\"," package.json # Add Liquid, Lisp, Lua

  sed -i -e "/\"language-makefile\": \".*\",/a \
              \"language-matlab\": \"${_language_matlab_ver}\"," package.json # MATLAB

  sed -i -e "/\"language-perl\": \".*\",/i \
              \"language-pascal\": \"${_language_pascal_ver}\"," package.json # pascal

  sed -i -e "/\"language-toml\": \".*\",/a \
              \"language-viml\": \"${_language_viml_ver}\"," package.json   # Add VimL

  sed -i -e "s/\"language-shellscript\": \".*\"/\"language-shellscript\": \"${_language_shellscript_ver}\"/g" package.json

  sed -i -e "/\"package-generator\": \".*\",/a \
              \"package-sync\": \"${_package_sync_ver}\",\n    \"pigments\": \"${_pigments_ver}\",\n    \"script\": \"${_script_ver}\",\n    \"platformio-ide-terminal\": \"${_platformio_ide_terminal_ver}\"," package.json

  sed -i -e "s/\"markdown-preview\": \".*\",/\"markdown-preview-plus\": \"${_markdown_preview_plus_ver}\",\n    \"markdown-scroll-sync\": \"${_markdown_scroll_sync_ver}\",\n    \"markdown-toc\": \"${_markdown_toc_ver}\",\n    \"minimap\": \"${_minimap_ver}\",/g" package.json

  ##sed -i -e "/\"link\": \".*\",/a \
  ##            \"linter\": \"${_linter_ver}\",\n    \"linter-clojure\": \"${_linter_clojure_ver}\",\n    \"linter-coffeelint\": \"${_linter_coffeelint_ver}\",\n    \"linter-cpplint\": \"${_linter_cpplint_ver}\",\n    \"linter-csslint\": \"${_linter_csslint_ver}\",\n    \"linter-docker\": \"${_linter_docker_ver}\",\n    \"linter-golinter\": \"${_linter_golinter_ver}\",\n    \"linter-htmlhint\": \"${_linter_htmlhint_ver}\",\n    \"linter-javac\": \"${_linter_javac_ver}\",\n    \"linter-jshint\": \"${_linter_jshint_ver}\",\n    \"linter-jsonlint\": \"${_linter_jsonlint_ver}\",\n    \"linter-lua\": \"${_linter_lua_ver}\",\n    \"linter-markdown\": \"${_linter_markdown_ver}\",\n    \"linter-php\": \"${_linter_php_ver}\",\n    \"linter-pylint\": \"${_linter_pylint_ver}\",\n    \"linter-ruby\": \"${_linter_ruby_ver}\",\n    \"linter-rust\": \"${_linter_rust_ver}\",\n    \"linter-scalac\": \"${_linter_scalac_ver}\",\n    \"linter-shellcheck\": \"${_linter_shellcheck_ver}\",\n    \"linter-sass-lint\": \"${_linter_sass_lint_ver}\",\n    \"linter-scss-lint\": \"${_linter_scss_lint_ver}\",\n    \"linter-tslint\": \"${_linter_tslint_ver}\",\n    \"linter-twig\": \"${_linter_twig_ver}\"," package.json

  sed -i -e "/\"timecop\": \".*\",/a \
              \"tidy-markdown\": \"${_tidy_markdown_ver}\"," package.json

  sed -i -e "s|^\"|    \"|g"  package.json # fixing spacing issues

  chmod 755 -R package.json

  sed -i -e 's@node script/bootstrap@node script/bootstrap --no-quiet@g' \
  ./script/build || die "Fail fixing verbosity of script/build"

  if ! [[ -d node_modules ]]; then
    mkdir -p node_modules
  else
    rm -rf node_modules/about-arch
  fi

  mv $srcdir/about-${_about_arch_ver} $srcdir/about-arch
  mv $srcdir/about-arch node_modules
  sed -i -e "s/atom-editor/atom-editor-${_version}/g" node_modules/about-arch/lib/about-view.coffee

  mv $srcdir/markdown-preview-plus-${_markdown_preview_plus_ver} $srcdir/markdown-preview-plus
  rm node_modules/markdown-preview-plus/assets/macros-template.cson

  sed -i -e "s/<%=Desc=%>/$pkgdesc/g" ${srcdir}/${_pkgname}-${_version}.desktop
}

build() {
  cd "$srcdir/${_pkgname}-$pkgver"
  export PYTHON=/usr/bin/python2
  until ./script/build --build-dir "$srcdir/${_pkgname}-build"; do :; done
}

package() {
  cd "$srcdir/${_pkgname}-$pkgver"

  script/grunt install --build-dir "$srcdir/${_pkgname}-build" --install-dir "$pkgdir/usr"

  install -Dm755 "$srcdir/${_pkgname}-${_version}" "$pkgdir/usr/bin/${_pkgname}"

	ln -sf "${pkgdir}/usr/share/${_pkgname}-${_version}/resources/app/apm/node_modules/.bin/apm" "${pkgdir}/usr/bin/apm-${_version}"

  rm "$pkgdir/usr/share/applications/${_pkgname}.desktop"

  install -Dm644 "$srcdir/${_pkgname}.desktop" "$pkgdir/usr/share/applications/${_pkgname}.desktop"
  install -Dm644 "resources/app-icons/stable/png/1024.png" "$pkgdir/usr/share/pixmaps/${_pkgname}.png"
  install -Dm644 "LICENSE.md" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"
}
