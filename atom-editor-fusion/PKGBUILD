# Maintainer: Brenton Horne <brentonhorne77 at gmail dot com>

_pkgname=atom
_version=fusion

# Module Versions
_about_url="https://github.com/fusion809/about"
_about_arch_ver=1.5.16
_atom_typescript_ver=8.10.2
_dark_bint_syntax_ver=0.8.4
_electron_ver=0.36.12
_file_icons_ver=1.7.13
_fusion_ui_ver=0.10.3
_git_plus_ver=5.14.0
_git_time_machine_ver=1.5.3
_language_asciidoc_ver=1.4.7
_asciidoc_url="https://github.com/asciidoctor/atom-language-asciidoc"
_language_d_ver=3.2.3
_language_docker_ver=1.1.6
_language_fortran_ver=2.0.11
_language_gentoo_ver=0.9.0
_language_gfm2_ver=0.90.3
_language_groovy_ver=0.6.0
_language_haskell_ver=1.7.15
_language_ini2_ver=1.17.2
_language_ini2_url="https://github.com/fusion809/atom-language-ini"
_language_julia_ver=0.6.0
_language_liquid_ver=0.5.1
_language_lisp_ver=0.2.0
_language_lua_ver=0.9.4
_language_matlab_ver=0.2.1
_language_pascal_ver=0.18.1
_language_patch2_url="https://github.com/fusion809/language-patch2"
_language_rpm_spec_ver=0.9.0
_rpm_spec_url="https://github.com/waveclaw/language-rpm-spec"
_language_viml_ver=1.0.0
_language_shellscript_ver=0.22.3
_markdown_scroll_sync_ver=2.1.2
_markdown_toc_ver=0.4.1
_minimap_ver=4.24.3
_nuclide_ver=0.139.0
_package_sync_ver=1.1.0
_pigments_ver=0.29.0
_script_ver=3.7.3
_platformio_ide_terminal_ver=2.0.10

pkgname=${_pkgname}-editor-${_version}
pkgver=1.7.4
pkgrel=9
pkgdesc='Hackable text editor for the 21st Century, based on web technologies with several custom packages installed.'
arch=('x86_64' 'i686')
url="https://github.com/${_pkgname}/${_pkgname}"
license=('MIT')
depends=('alsa-lib' 'desktop-file-utils' 'gconf' 'gtk2' 'libgnome-keyring' 'libnotify' 'libxtst' 'nodejs' 'nss' 'python2')
optdepends=('gvfs: file deletion support')
makedepends=('git' 'npm')
conflicts=('atom-editor-bin' 'atom-editor')
install=${_pkgname}-${_version}.install
source=("${_pkgname}-${pkgver}.tar.gz::$url/archive/v${pkgver}.tar.gz"
"about-arch-${_about_arch_ver}.tar.gz::$_about_url/archive/v${_about_arch_ver}.tar.gz"
"asciidoc-${_language_asciidoc_ver}.tar.gz::${_asciidoc_url}/archive/v${_language_asciidoc_ver}.tar.gz"
"rpm-spec-${_language_rpm_spec_ver}.tar.gz::${_rpm_spec_url}/archive/v${_language_rpm_spec_ver}.tar.gz"
"git+https://github.com/skandasoft/browser-plus.git"
"${_pkgname}.desktop"
"${_pkgname}"
"asciidoc.patch")
sha256sums=('6ef3bb4c2fea85a7d1c7665fef8aac4e353c8f8da5e2878fea3aecf5437383d4'
            '1f9d3d560ab6374b38644e9c55a7c8fa0f8f581758fb2ee0b18c3f8c53aee44f'
            '3e03c276ea1cc58f22143c3026e39ec5fbcc890d112d4369719eb82525ff7f7a'
            'e238bc5ac98da32057c9df5e7710b42c8cdd2bab13a9961c5dffdffbfcb2ea2c'
            'SKIP'
            'fb6527d029c5edffa89a5085cc1d3eaaa892e18cc2aefa8ce855be7612da4788'
            '0b3e189202c82c98bc3d3f9a9c88d2aab88537cdd2e0fc2f4d537f55a068acb5'
            '2edf265a898333561b7d14597c951c528bd27f04bc9f7adef2fb0cdfaacb5b9a')

prepare() {
  cd "$srcdir/${_pkgname}-$pkgver"

  ## package.json edits
  sed -i -e "/exception-reporting/d" \
         -e "/metrics/d" package.json

  sed -i -e "s/\"about\": \".*\"/\"about-arch\": \"${_about_arch_ver}\"/g" package.json # switching about with about-arch

  sed -i -e "s/\"electronVersion\": \".*\"/\"electronVersion\": \"${_electron_ver}\"/g" package.json              # change electron ver

  sed -i -e "/\"atom-light-syntax\": \".*\"/a \
              \"dark-bint-syntax\": \"${_dark_bint_syntax_ver}\"," package.json # install dark-bint-syntax

  sed -i -e "/\"atom-light-ui\": \".*\",/a \
             \"fusion-ui\": \"${_fusion_ui_ver}\"," package.json # install fusion-ui theme

  sed -i -e "/\"find-and-replace\": \".*\",/i \
              \"file-icons\": \"${_file_icons_ver}\"," package.json # file-icons

  sed -i -e "/\"git-diff\": \".*\",/a \
              \"git-plus\": \"${_git_plus_ver}\",\n    \"git-time-machine\": \"${_git_time_machine_ver}\"," package.json # git packages

  sed -i -e "/\"language-c\": \".*\",/i \
              \"language-asciidoc\": \"${_language_asciidoc_ver}\"," package.json

  sed -i -e "/\"language-css\": \".*\",/a \
              \"language-d\": \"${_language_d_ver}\",\n    \"language-docker\": \"${_language_docker_ver}\",\n    \"language-fortran\": \"${_language_fortran_ver}\"," package.json

  sed -i -e "s/\"language-gfm\": \".*\",/\"language-gfm2\": \"${_language_gfm2_ver}\",/g" package.json # GFM2

  sed -i -e "/\"language-gfm2\": \".*\",/i \
              \"language-gentoo\": \"${_language_gentoo_ver}\"," package.json # gentoo

  sed -i -e "/\"language-hyperlink\": \".*\",/a \
              \"language-ini2\": \"${_language_ini2_ver}\",\n    \"language-julia\": \"${_language_julia_ver}\"," package.json # Julia

  sed -i -e "/\"language-less\": \".*\",/a \
              \"language-liquid\": \"${_language_liquid_ver}\",\n    \"language-lisp\": \"${_language_lisp_ver}\",\n    \"language-lua\": \"${_language_lua_ver}\"," package.json # Add Liquid, Lisp, Lua

  sed -i -e "/\"language-makefile\": \".*\",/a \
              \"language-matlab\": \"${_language_matlab_ver}\"," package.json # MATLAB

  sed -i -e "/\"language-perl\": \".*\",/i \
              \"language-pascal\": \"${_language_pascal_ver}\",\n    \"language-patch2\": \"0.1.2\"," package.json # pascal

  sed -i -e "/\"dependencies\": {/a \
              \"language-patch2\": \"${_language_patch2_url}\"," package.json

  sed -i -e "/\"dependencies\": {/a \
              \"language-ini2\": \"${_language_ini2_url}\"," package.json

  sed -i -e "/\"language-toml\": \".*\",/a \
              \"language-viml\": \"${_language_viml_ver}\"," package.json   # Add VimL

  sed -i -e "s/\"language-shellscript\": \".*\"/\"language-shellscript\": \"${_language_shellscript_ver}\"/g" package.json

  sed -i -e "/\"language-shellscript\": \".*\",/i \
              \"language-rpm-spec\": \"${_language_rpm_spec_ver}\"," package.json

  sed -i -e "/\"package-generator\": \".*\",/a \
              \"package-sync\": \"${_package_sync_ver}\",\n    \"pigments\": \"${_pigments_ver}\",\n    \"script\": \"${_script_ver}\",\n    \"platformio-ide-terminal\": \"${_platformio_ide_terminal_ver}\"," package.json

  sed -i -e "/\"markdown-preview\": \".*\",/a \
              \"markdown-scroll-sync\": \"${_markdown_scroll_sync_ver}\",\n    \"markdown-toc\": \"${_markdown_toc_ver}\",\n    \"minimap\": \"${_minimap_ver}\"," package.json

 sed -i -e "/\"bracket-matcher\": \".*\",/a \
              \"browser-plus\": \"0.0.60\"," package.json

 sed -i -e "s|^\"|    \"|g"  package.json # fixing spacing issues

 chmod 755 -R package.json

 sed -i -e 's@node script/bootstrap@node script/bootstrap --no-quiet@g' \
 ./script/build || die "Fail fixing verbosity of script/build"

 if ! [[ -d node_modules ]]; then
  mkdir -p node_modules
 else
   rm -rf node_modules/about-arch
   rm -rf node_modules/browser-plus
   rm -rf node_modules/language-asciidoc
   rm -rf node_modules/language-rpm-spec
 fi

  mv $srcdir/about-${_about_arch_ver} $srcdir/about-arch
  mv $srcdir/about-arch node_modules
  sed -i -e "s/atom-editor/atom-editor-${_version}/g" node_modules/about-arch/lib/about-view.coffee

  mv $srcdir/browser-plus node_modules

  sed -i -e "/\"name\": \"browser-plus\",/a \
              \"readme\": \"./README.md\"," node_modules/browser-plus/package.json

  cd node_modules/browser-plus
  npm install
  cd -

  # language-rpm-spec
  mv $srcdir/language-rpm-spec-${_language_rpm_spec_ver} $srcdir/language-rpm-spec
  mv $srcdir/language-rpm-spec node_modules

  sed -i -e "s|\"language-rpm-spec\",|\"language-rpm-spec\",\n  \"readme\": \"./README.md\",|g" \
  node_modules/language-rpm-spec/package.json

  sed -i -e "/main/d" node_modules/language-rpm-spec/package.json

  sed -i -e "s/<%=Desc=%>/$pkgdesc/g" ${srcdir}/${_pkgname}.desktop

  mv $srcdir/atom-language-asciidoc-${_language_asciidoc_ver} $srcdir/language-asciidoc
  mv $srcdir/language-asciidoc node_modules
  cd node_modules/language-asciidoc
  patch -Np1 < $srcdir/asciidoc.patch
  cd -
}

build() {
  cd "$srcdir/${_pkgname}-$pkgver"
  export PYTHON=/usr/bin/python2
  until ./script/build --build-dir "$srcdir/${_pkgname}-build"; do :; done
}

package() {
  cd "$srcdir/${_pkgname}-$pkgver"

  script/grunt install --build-dir "$srcdir/${_pkgname}-build" --install-dir "$pkgdir/usr"

  install -Dm755 "$srcdir/${_pkgname}" "$pkgdir/usr/bin/${_pkgname}"

  rm "$pkgdir/usr/share/applications/${_pkgname}.desktop"

  install -Dm644 "$srcdir/${_pkgname}.desktop" "$pkgdir/usr/share/applications/${_pkgname}.desktop"
  install -Dm644 "resources/app-icons/stable/png/1024.png" "$pkgdir/usr/share/pixmaps/${_pkgname}.png"
  install -Dm644 "LICENSE.md" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"
}
